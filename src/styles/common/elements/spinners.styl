spinner-whole-circle(diameter, weight, firstColor, secondColor)
  inline-row(valign:middle)
  margin 60px auto
  font-size 10px
  position relative
  text-indent -9999em

  &,
  &:before,
  &:after
    border-radius 50%
    width diameter
    height diameter

  &:before
    display block
    content ""
    border weight solid secondColor
    border-left-color firstColor
    transform translateZ(0)
    animation wholeCircle 1.1s infinite linear

  &.c-spinner--centered
    position absolute
    left 50%
    top 50%
    margin-left -(diameter / 2)
    margin-top -(diameter / 2)

  > *
    stretch()
    top 50%
    font-family CircularStd
    font-size 13px
    text-indent 0
    margin-top -8px
    text-align center

  @keyframes wholeCircle {
    0% {
      transform rotate(0deg)
    }

    100% {
      transform rotate(360deg)
    }
  }

///

.c-spinner--whole-circle
  spinner-whole-circle(5em, 0.5em, rgba(255, 255, 255, 0.2), #fff)

  &.c-spinner--dark
    spinner-whole-circle(5em, 0.5em, rgba(197, 197, 197, 0.25), #6f6f6f)

