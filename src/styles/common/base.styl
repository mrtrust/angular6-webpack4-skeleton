@require '~styles/mixins/colors.styl';
@require "~styles/common/variables.styl";

html
  font-size 100%
  height 100%

body
  margin 0
  padding 0
  font-size default-font-size
  font-family Arial, sans-serif
  background-color white
  width 100%
  height 100%
  font-weight 400
  overflow-y scroll

  @media print
    background-color white !important

h1, h2, h3, h4, h5, h6,
input, textarea, button, a
  font-family Arial, sans-serif

*
  box-sizing border-box
  padding 0
  margin 0

a,
a:hover
  text-decoration none
  cursor pointer
  color links-color

button
  cursor pointer

ol, ul
  margin 0
  padding 0

li
  list-style none

blockquote,
dl, dt, dd,
button, input, select, textarea
  margin 0

p
  line-height 1.6

[role=button], a, area, button, input, label, select, summary, textarea
  touch-action manipulation

*:focus
  outline none

h1
  color #505050
  font-size 30px
  margin 40px 0 30px

h2
  color #333333
  font-size 20px
  margin 15px 0;
  